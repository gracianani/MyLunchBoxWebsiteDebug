@model MyLunchBox.Models.ForgetPasswordModel

@{
    ViewBag.Title = "Forget Password";
}

<h2>Password Assistance</h2>
<p>
    Please answer the question and answer in the form. 
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
    <div class="lightBox">
        <fieldset>
			<div class="editor-label">
               Account:
            </div>
            <div class="editor-field">
                @Model.Email
            </div>
            <hr />
            <div class="editor-label">
                Question:
            </div>

            <div class="editor-field">
                <p><em>@Model.PasswordQuestion ?</em></p>
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.PasswordAnswer)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.PasswordAnswer)
                @Html.ValidationMessageFor(m => m.PasswordAnswer)
            </div>
			<p class="editor-field">If forgotten the answer, please <a href="/Home/About#contact" target="_blank" class="btn btn-small">Contact Us</a></p>
            <div class="form-actions">
                <input type="submit" value="Submit" class="btn btn-big btn-primary" />
            </div>
            
            
        </fieldset>
    </div>
}
