@{
    ViewBag.Title = "Home Impression Chinese Food";
    Layout = "~/Views/Shared/_MobileMaster.cshtml";
}


  
  <div data-role="content">
  <div style="text-align:center">
  	<img class="responsiveImg" src="/Content/Images/home.png">
  </div>
    @using (Html.BeginForm("Index", "Mobile", FormMethod.Post, new { @data_theme="c"}))
    {   
    <fieldset>
        <label for="username" class="ui-hidden-accessible">Email:</label>
        <input type="text" name="username" id="username" value="" placeholder="Email"/>
        <label for="password" class="ui-hidden-accessible">Password:</label>
        <input type="password" name="password" id="password" value="" placeholder="Password"/>
        <div class="ui-grid-a">
            <div class="ui-block-a">
            <input type="submit" value="Log In" data-theme="b" />
            </div>
            <div class="ui-block-b">
            <a href="/Mobile/Register" data-ajax="false" data-role="button" data-theme="d">Register</a>
            </div>
        </div>
    </fieldset>
    }
  </div>
  <!-- /content -->

<div data-role="footer" data-position="fixed">
    <div data-role="navbar">
		<ul>
			<li><a href="tel:400(817-6363)" data-theme="b">400(817-6363)</a></li>
            <li>@Html.ActionLink("View Full Website", "ViewFullSite", new { }, new { @data_theme = 'b' }) </li>
		</ul>
	</div><!-- /navbar -->
</div> 

